<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QRBarcodeReader_Light" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>

    </style>

    <style name="Theme.QRBarcodeReader" parent="Base.Theme.QRBarcodeReader_Light" />

    <style name="ScreenBackground">
        <item name="android:background">@color/md_theme_light_onPrimary</item>
    </style>
    
    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/md_theme_light_primary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ImageQr">
        <item name="android:background">@drawable/qr_code</item>
    </style>

    <style name="ImageDel">
        <item name="android:background">@drawable/delete</item>
    </style>

    <style name="ImageShare">
        <item name="android:background">@drawable/share_black</item>
    </style>

    <style name="ImageClose">
        <item name="android:background">@drawable/close</item>
    </style>

    <style name="ImageBar">
        <item name="android:background">@drawable/barcode</item>
    </style>
</resources>